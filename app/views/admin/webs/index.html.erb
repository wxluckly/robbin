<%= link_to '添加', new_admin_web_path(category: params[:category]), class: 'pull-right btn btn-warning' %>
<% if @webs.present? %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>缩略图</th>
      <th>标题</th>
      <th>地址</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @webs.each do |web| %>
    <tr>
      <td><%= image_tag(web.cover_url(:thumb)) %></td>
      <td><%= web.title %></td>
      <td><%= web.url %></td>
      <td>
        <%= link_to '编辑', edit_admin_web_path(web, category: params[:category]) %>
        <%= link_to '删除', admin_web_path(web, category: params[:category]), method: :delete, data: { confirm: '确定删除吗?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @webs %>
<% else %>
<div>
  暂无内容
</div>
<% end %>

<%= simple_form_for(@web, as: "web", url: @web.new_record? ? admin_webs_path : admin_web_path(@web), html: {class: "form-horizontal"}) do |f| %>
<% @web.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
<%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
<%= f.input :title, label: '标题' %>
<%= f.input :cover, label: '封面(310x160)' %>
<%= f.input :url, label: '地址' %>

<div class="control-group">
  <div class="controls">
    <%= f.button :submit, "保存" %>
  </div>
</div>
<% end %>